   <children>
      <FlowPane columnHalignment="CENTER" prefHeight="200.0" prefWidth="200.0" vgap="15.0">
         <children>
            <Label alignment="CENTER" prefHeight="51.0" prefWidth="244.0" text="Introducere medicamente">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <ComboBox prefHeight="26.0" prefWidth="245.0" promptText="Tipul medicamentului" />
            <ComboBox fx:id="dropFurnizor" prefHeight="26.0" prefWidth="246.0" promptText="Furnizor" />
            <TextField fx:id="textPret" prefHeight="26.0" prefWidth="243.0" promptText="Pret" />
            <TextField fx:id="textComentarii" prefHeight="26.0" prefWidth="241.0" promptText="Comentarii" />
            <FlowPane alignment="CENTER" prefHeight="28.0" prefWidth="240.0">
               <children>
                  <Button fx:id="buttonMinus" mnemonicParsing="false" text="-" />
                  <TextField fx:id="textStoc" prefHeight="26.0" prefWidth="194.0" promptText="Stoc introdus" />
                  <Button fx:id="buttonPlus" mnemonicParsing="false" text="+" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" hgap="10.0" prefHeight="28.0" prefWidth="218.0">
               <children>
                  <Button fx:id="buttonAdd" mnemonicParsing="false" text="Adauga" />
                  <Button fx:id="buttonCancel" mnemonicParsing="false" text="Cancel" />
               </children>
            </FlowPane>
         </children>
      </FlowPane>
   </children>
</FlowPane>
